<Window x:Class="LoggerRead.Windows.NetworkDownload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoggerRead.Windows"
        mc:Ignorable="d"
        Title="NetworkDownload" Height="216" Width="279">
    <Grid Margin="0,0,10,0">
        <TextBox x:Name="host" HorizontalAlignment="Left" Margin="101,37,0,0" TextWrapping="Wrap" Text="127.0.0.1:27" VerticalAlignment="Top" Width="167"/>
        <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="101,156,0,0" VerticalAlignment="Top" Click="Save_Click"/>
        <Button x:Name="Download" Content="Load all files" HorizontalAlignment="Left" Margin="199,156,0,0" VerticalAlignment="Top" Click="Download_Click"/>
        <Label Content="Host:Ip" HorizontalAlignment="Left" Margin="47,33,0,0" VerticalAlignment="Top" Width="49"/>
        <ComboBox HorizontalAlignment="Left" Margin="101,70,0,0" VerticalAlignment="Top" Width="168"/>
        <Label Content="Old Connections" HorizontalAlignment="Left" Margin="0,66,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
